<%-
Array(@sources).each_with_index  do |source, index|
    if source.is_a?(Hash)
%>
SOURCE<%= index %>=<%= source['path'] %>
<%-     if source['host'] %>
SOURCE<%= index %>_HOST=<%= source['host'] %>
<%      end -%>
<%-     if source['user'] %>
SOURCE<%= index %>_USER=<%= source['user'] %>
<%      end
    else
-%>
SOURCE<%= index %>=<%= source %>
    <% end
end -%>

TARGET=<%= @target %><%= @target_suffix %>
<% if @target_host -%>
TARGET_HOST=<%= @target_host %>
<% else -%>
TARGET_HOST=
<% end -%>
<% if @target_user -%>
TARGET_USER=<%= @target_user %>
<% else -%>
TARGET_USER=
<% end -%>

<% if @ssh_identity -%>
SSH_IDENTITY=<%= @ssh_identity %>
<% else -%>
SSH_IDENTITY=
<% end -%>

<% if @ssh_port -%>
SSH_PORT=<%= @ssh_port %>
<% else -%>
SSH_PORT=
<% end -%>

<% if @relative -%>
RELATIVE=1
<% else -%>
RELATIVE=
<% end -%>

<% if @chmod -%>
CHMOD=<%= @chmod %>
<% else -%>
CHMOD=
<% end -%>

MAIN_MAX=<%= @main_max %>
DAILY_MAX=<%= @daily_max %>
WEEKLY_MAX=<%= @weekly_max %>
MONTHLY_MAX=<%= @monthly_max %>
